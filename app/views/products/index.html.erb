<h1>Toutes les machines</h1>
<%= render partial: 'shared/products', locals: {products: @products} %>

<br><br><br>
<hr>
<h2>Tableau des machines</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gamme</th>
      <th>Marque</th>
      <th>Slug</th>
      <th>Imgs</th>
      <th>Short description</th>
      <th>Long description</th>
      <th>Material</th>
      <th>Specs</th>
      <th>Options</th>
      <th>Video links</th>
      <th>Tip</th>
      <th>Pdfs</th>
      <th>Seo text</th>
      <th>Seo keywords</th>
      <th>Links</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.productrange.name if product.productrange %></td>
        <td><%= product.productrange.brand.name if product.productrange  %></td>
        <td><%= product.slug %></td>
        <td><%= product.imgs %></td>
        <td><%= product.short_description %></td>
        <td><%= product.long_description %></td>
        <td><%= product.material %></td>
        <td><%= product.specs %></td>
        <td><%= product.options %></td>
        <td><%= product.video_links %></td>
        <td><%= product.tip %></td>
        <td><%= product.pdfs %></td>
        <td><%= product.seo_text %></td>
        <td><%= product.seo_keywords %></td>
        <td><%= product.links %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-success" %>
