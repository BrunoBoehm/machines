<p id="notice"><%= notice %></p>

<h1>Toutes les sous-catégories (<%= @sub_categories.count %>)</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Subcategory Name</th>
      <th>Slug</th>
      <th>Description</th>
      <th>Seo text</th>
      <th>Seo keywords</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.category.name if sub_category.category %></td>
        <td><%= sub_category.name %></td>
        <td><%= sub_category.slug %></td>
        <td><%= sub_category.description %></td>
        <td><%= sub_category.seo_text %></td>
        <td><%= sub_category.seo_keywords %></td>
        <td><%= link_to 'Show', sub_category %></td>
        <td><%= link_to 'Edit', edit_sub_category_path(sub_category) %></td>
        <td><%= link_to 'Destroy', sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une sous-catégorie', new_sub_category_path, class: "btn btn-success" %>
